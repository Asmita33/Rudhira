        <activity android:name=".bloodRequest.RequestDetailAdmin" />
        <activity android:name=".bloodRequest.RequestList" />
        <activity android:name=".bloodRequest.RaiseRequest" />
        <activity
            android:name=".MapSearchActivity"
            android:exported="false" />
        <activity android:name=".AdminMainActivity" />
        <activity
            android:name=".ChatActivity"
            android:exported="false" />
        <activity
            android:name=".UserProfile"
            android:label="@string/user_profile" />
        <activity android:name=".OTPSignUp" />
        <activity android:name=".OTPActivity" />
        <activity
            android:name=".UserLogin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AdminLogin" />
        <activity
            android:name=".loginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>